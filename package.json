{
  "name": "thc-media-centre",
  "version": "0.0.1",
  "description": "A media centre for locally managed media",
  "main": "start.js",
  "repository": "https://github.com/TheHomeComp/thc-media-centre",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/react": "^16.3.11",
    "@types/react-dom": "^16.0.5",
    "concurrently": "^3.5.1",
    "electron": "^1.8.4",
    "electron-rebuild": "^1.7.3",
    "html-webpack-plugin": "^3.2.0",
    "ts-loader": "^4.2.0",
    "typescript": "^2.8.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14"
  },
  "scripts": {
    "run-electron": "electron dist/main.js",
    "watch-render": "webpack --watch --config webpack.config.render.dev.js",
    "watch-main": "webpack --watch --config webpack.config.main.dev.js",
    "build-render": "webpack --config webpack.config.render.prod.js",
    "build-main": "webpack --config webpack.config.main.prod.js",
    "start": "concurrently --kill-others --names \"RENDER,MAIN,ELECTRON\" \"yarn run watch-render\" \"yarn run watch-main\" \"yarn run run-electron\"",
    "build": "concurrently --names \"RENDER,MAIN\" \"yarn run build-render\" \"yarn run build-main\"",
    "postinstall": "electron-rebuild"
  },
  "dependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  }
}
